<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yixiao.mapper.UserMapper" >

  <!-- 根据ID查询得到一个USER对象-->
  <select id="getUser" parameterType="int" resultType="com.yixiao.domain.User">
    select * from users where id=#{id}
  </select>

  <!-- 创建用户 Create -->
  <insert id="addUser" parameterType="com.yixiao.domain.User">
    insert into users(name,age) values(#{name}, #{age})
  </insert>

  <!-- 删除用户 Remove -->
  <delete id="deleteUser" parameterType="int" >
      delete from users where id=#{id}
  </delete>

  <!-- 修改用户 Update -->
  <update id="updateUser" parameterType="com.yixiao.domain.User">
      update users set name=#{name}, age=#{age} where id=#{id}
  </update>
  <!-- 查询全部用户 -->
  <select id="getAllUsers" resultType="com.yixiao.domain.User">
      select * from users
  </select>

</mapper>